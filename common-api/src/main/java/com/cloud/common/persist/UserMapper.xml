<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.common.persist.UserMapper">

    <sql id="Base_Column_List">
        id, name,password,card, age,phone, status, createTime, updateTime
    </sql>

    <insert id="addUser" parameterType="com.cloud.common.damain.DO.UserDO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO  user
         (name,password,card,age,phone)
        VALUE
        (#{name},#{password},#{card},#{age},#{phone})
    </insert>

    <select id="selectById">
        select <include refid="Base_Column_List"/>
        from user
        where id = #{id}
    </select>
    <select id="selectUser" resultType="com.cloud.common.damain.DO.UserDO">
        select
        <include refid="Base_Column_List"/>
        from user
    </select>

    <update id="update">
        update user
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="card != null">
                card = #{card},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>

        </set>
        where id = #{id}
    </update>

</mapper>